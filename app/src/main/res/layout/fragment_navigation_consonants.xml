<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/consonant_background"
        android:layout_height="match_parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/ui"
        android:layout_height="match_parent">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="bottom|center"
            android:translationY="30dp"
            android:src="@drawable/consonants_sign_bevel"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/hud"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.aun.tela.alphabets.application.gui.custom.CircularColorView
            android:id="@+id/back"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_width="@dimen/buttonSize"
            android:visibility="invisible"
            android:layout_height="@dimen/buttonSize"
            app:circular_color="random"
            app:shadow="true"
            app:border_width="@dimen/border_width_small_button"
            android:clickable="false"
            app:border_color="@color/white"
            >
            <ImageButton
                android:layout_width="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@color/transparent"
                android:tint="@color/white"
                android:src="@drawable/arrow_back"
                android:layout_height="match_parent" />

        </com.aun.tela.alphabets.application.gui.custom.CircularColorView>

        <com.aun.tela.alphabets.application.gui.custom.CircularColorView
            android:id="@+id/left"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_width="@dimen/buttonSize"
            android:layout_height="@dimen/buttonSize"
            android:layout_gravity="bottom|left"
            app:circular_color="random"
            app:shadow="true"
            android:visibility="invisible"
            app:border_width="@dimen/border_width_small_button"
            android:clickable="false"
            app:border_color="@color/white"
            >
            <ImageButton
                android:layout_width="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@color/transparent"
                android:tint="@color/white"
                android:src="@drawable/chevron_left"
                android:layout_height="match_parent" />

        </com.aun.tela.alphabets.application.gui.custom.CircularColorView>

        <com.aun.tela.alphabets.application.gui.custom.CircularColorView
            android:id="@+id/right"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_width="@dimen/buttonSize"
            android:layout_height="@dimen/buttonSize"
            app:circular_color="random"
            app:shadow="true"
            android:visibility="invisible"
            android:layout_gravity="bottom|right"
            app:border_width="@dimen/border_width_small_button"
            android:clickable="false"
            app:border_color="@color/white"
            >
            <ImageButton
                android:layout_width="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@color/transparent"
                android:tint="@color/white"
                android:src="@drawable/chevron_right"
                android:layout_height="match_parent" />

        </com.aun.tela.alphabets.application.gui.custom.CircularColorView>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/animationContainer"
        android:layout_height="match_parent">


    </FrameLayout>

</FrameLayout>