<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="4dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingBottom="4dp"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/titleBarLayout"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/buttonSize"
        android:layout_height="wrap_content">

        <com.aun.tela.alphabets.application.gui.custom.BarColorView
            android:layout_width="match_parent"
            android:id="@+id/titleBar"
            app:border_color="random"
            app:bar_color="random"
            app:bar_shadow="true"
            app:bar_border_width="4dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/title"
            android:textSize="@dimen/text_size_display1"
            android:layout_width="match_parent"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_margin="@dimen/activity_horizontal_margin_half"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </FrameLayout>
</FrameLayout>
